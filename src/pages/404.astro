---
import Layout from "@/layouts/Layout.astro";
import { Button } from "@/components/interactive/ui/button";
import { Home, ArrowLeft } from "lucide-react";
import NeuralLine from "@/components/background_animation/NeuralLine.astro";
---

<Layout title="404 - Page Not Found">
  <section
    class="min-h-[80vh] flex items-center justify-center relative overflow-hidden pt-20"
  >
    <div class="container mx-auto px-4 relative z-10 text-center">
      <div class="flex flex-col items-center gap-6 sm:gap-8" data-aos="zoom-in">
        <div class="relative">
          <h1
            class="text-9xl font-black bg-primary bg-clip-text text-transparent opacity-20"
          >
            404
          </h1>
          <div class="absolute inset-0 flex items-center justify-center">
            <h2 class="text-4xl sm:text-6xl font-bold">Lost in Space?</h2>
          </div>
        </div>

        <p class="text-lg text-muted-foreground max-w-md mx-auto">
          The page you're looking for seems to have vanished into a black hole
          or never existed in this dimension.
        </p>

        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/">
            <Button variant="hero" className="gap-2">
              <Home size={18} />
              Back to Home
            </Button>
          </a>
          <button
            onclick="history.back()"
            class="h-10 px-4 py-2 w-auto inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium relative isolate overflow-hidden text-foreground rounded-lg font-medium bg-primary/5 backdrop-blur-xl border border-primary/20 border-primary-foreground/20 transition-all duration-500 hover-border-1"
          >
            <ArrowLeft size={18} />
            Go Back
          </button>
        </div>
      </div>
    </div>
    <NeuralLine />
  </section>
</Layout>
