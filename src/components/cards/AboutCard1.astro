---
import type { AboutCard1Props } from "@/utils/types";

interface Props extends AboutCard1Props {}

const {
  icon: Icon,
  title,
  description,
  animationDelay,
  className = "",
} = Astro.props;
---

<div
  class={`flex gap-3 sm:gap-6 items-start group ${className}`}
  data-aos="fade-right"
  data-aos-delay={animationDelay ?? 300}
>
  <div
    class="sm:size-16 size-10 rounded-2xl bg-card flex items-center justify-center shrink-0"
  >
    <Icon className="size-5 sm:size-8" />
  </div>
  <div class="flex-1 flex flex-col gap-1 sm:gap-3">
    <h3 class="font-bold text-lg sm:text-xl">{title}</h3>
    <p class="text-muted-foreground leading-relaxed">{description}</p>
  </div>
</div>
