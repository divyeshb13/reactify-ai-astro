---
import { heroStats } from "@/utils/const";
import HeroCard from "@/components/cards/HeroCard.astro";
import NeuralLine from "@/components/background_animation/NeuralLine.astro";
import FloatingParticles from "@/components/background_animation/FloatingParticles.astro";
import FloatingHeroIcons from "@/components/background_animation/FloatingHeroIcons.astro";
import CardGradientBg from "@/components/background_animation/CardGradientBg.astro";
import { Button } from "@/components/interactive/ui/button";
import { ArrowRight, Play } from "lucide-react";
import { Image } from "astro:assets";
---

<section
  id="home"
  class="relative min-h-screen flex items-center justify-center overflow-hidden sm:pt-40 sm:pb-20 pt-32 pb-10"
>
  <div class="absolute inset-0 z-0">
    <Image
      src={import.meta.env.PUBLIC_HERO_IMAGE}
      alt="Background"
      width={1920}
      height={1080}
      class="w-full h-full object-cover opacity-10"
    />

    <div class="absolute inset-0 bg-[image:var(--gradient-primary)] opacity-10">
    </div>
    <div class="absolute inset-0 bg-background/30"></div>
  </div>
  <FloatingParticles />

  <!-- Floating Hero Icons (Universal Component) -->
  <FloatingHeroIcons />

  <!-- Main Content -->
  <div class="relative z-10 container mx-auto text-center">
    <div class="max-w-5xl mx-auto flex flex-col items-center gap-8 sm:gap-12">
      <!-- Animated Badge -->
      <div class="flex flex-col gap-4 sm:gap-6">
        <div
          class="inline-flex items-center gap-2 sm:gap-3 glass-card border border-primary/30 rounded-full px-6 py-3 w-fit mx-auto"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="size-5 text-primary"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z"
            ></path>
          </svg>
          <span class="text-sm font-semibold text-primary">
            AI Automation for Growth
          </span>
        </div>
        <div class="flex flex-col gap-4 sm:gap-6">
          <!-- Main Heading -->
          <div data-aos="fade-up" data-aos-delay="200">
            <h1
              class="text-4xl md:text-7xl lg:text-8xl font-bold leading-tight"
            >
              <CardGradientBg
                className="bg-clip-text text-transparent block sm:pb-4"
              >
                Simplifying Tech
              </CardGradientBg>
              <span>To Empower Your</span>
              <br />
              <span>Business Growth!</span>
            </h1>
          </div>

          <!-- Description -->
          <p
            class="text-xl md:text-2xl text-muted-foreground max-w-4xl mx-auto leading-relaxed"
            data-aos="fade-up"
            data-aos-delay="300"
          >
            Working hard to build safe and beneficial artificial intelligence
            systems while observing how our research helps others achieve their
            outcomes through cutting-edge automation.
          </p>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div
        class="flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center"
        data-aos="fade-up"
        data-aos-delay="400"
      >
        <a href="#services" class="inline-flex">
          <Button
            variant="hero"
            size="lg"
            className="text-base sm:text-lg px-10 py-7 relative overflow-hidden group"
          >
            <span class="relative z-10 flex items-center gap-3">
              Explore Our Services
              <ArrowRight
                className="w-6 h-6 group-hover:translate-x-1 transition-transform"
              />
            </span>
            <CardGradientBg
              className="opacity-0 group-hover:opacity-30 transition-opacity"
            />
          </Button>
        </a>
        <a href="#about" class="inline-flex">
          <Button
            variant="glass"
            size="lg"
            className="relative text-base sm:text-lg px-10 py-7"
          >
            <Play className="w-6 h-6" />
            Learn More
          </Button>
        </a>
      </div>

      <!-- Enhanced Stats -->
      <div
        class="grid grid-cols-1 md:grid-cols-3 gap-4 sm:gap-8 w-full"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        {heroStats.map((stat, index) => <HeroCard {...stat} index={index} />)}
      </div>
    </div>
  </div>
  <NeuralLine />
</section>
