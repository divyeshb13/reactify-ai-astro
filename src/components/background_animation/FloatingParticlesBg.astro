---
interface Props {
  opacity?: number;
  hoverOpacity?: number;
  className?: string;
}

const { opacity = 0.7, hoverOpacity = 1, className = "" } = Astro.props;
---

<div class={`absolute inset-0 pointer-events-none z-100 ${className}`}>
  <div
    class="transition-opacity duration-700 absolute inset-0"
    style={{ opacity }}
  >
    <div
      class="absolute top-1/4 left-1/4 w-2 h-2 bg-primary/60 rounded-full animate-ping"
    >
    </div>
    <div
      class="absolute top-3/4 right-1/3 w-1 h-1 bg-primary/60 rounded-full animate-pulse"
    >
    </div>
    <div
      class="absolute bottom-1/3 left-2/3 w-1.5 h-1.5 bg-primary/35 rounded-full animate-bounce"
    >
    </div>
  </div>
</div>

<style>
  /* Hover effect for opacity change */
  .group:hover .transition-opacity {
    opacity: var(--hover-opacity);
  }
</style>

<script define:vars={{ hoverOpacity }}>
  // Set CSS variable for hover opacity
  document.documentElement.style.setProperty(
    "--hover-opacity",
    hoverOpacity.toString(),
  );
</script>
